<Page x:Class="POE_WPF.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POE_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <StackPanel>
            <TextBox Name="txtName" Width="200" Margin="10"/>
            <TextBox Name="txtQuantity" Width="200" Margin="10"/>
            <TextBox Name="txtUnit" Width="200" Margin="10"/>
            <TextBox Name="txtCalories" Width="200" Margin="10"/>
            <ComboBox Name="cbFoodGroup" Width="200" Margin="10"/>
            <Button Name="btnSubmit2" Content="Submit" Click="btnSubmit2_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
